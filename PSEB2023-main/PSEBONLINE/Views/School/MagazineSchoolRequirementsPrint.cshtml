@model PSEBONLINE.Models.MagazineSchoolRequirements
@{
    ViewBag.Title = "Magazine School Requirements Print";
    Layout = "~/Views/Shared/_Card_Header.cshtml";
}
<link rel="stylesheet" href="https://registration2022.pseb.ac.in/Content/cardprintc.css" />
<h1 class="noprint">Magazine School Requirements Print Receipt</h1>
<div class="row">
    <div class="col-md-12 text-right noprint">
        <input type="button" value="Print" class="btn" onclick="window.print()" />
        <input type="button" value="Back" class="btn" onclick="history.go(-1);" />
    </div>
    <div class="clearfix"></div>

    @{
        if (Session["LoginSession"] != null)
        {
            PSEBONLINE.Models.LoginSession LoginSession = (PSEBONLINE.Models.LoginSession)Session["LoginSession"];

            <div class="col-md-12">
                <div style="border:1px solid #fff !important;display:block;margin-bottom:30px">
                        <table border="1" width="100%" class="tprint">
                            <thead>
                                <tr>
                                    <td style="border-right:0 !important" colspan="2" width="15%"><div style="padding:2px"><img src="~/Images/Printlogo.jpg" width="60px" height="60px" alt="PSEB" /></div></td>
                                    <td colspan="3" style="font-size:16px;text-align:center;line-height:24px;vertical-align:top;border-left:0 !important;border-right:0 !important;padding-top:8px">
                                        <span style="font-size:28px">Punjab School Education Board</span><br /><span>
                                            Magazine School Requirements Receipt Session @LoginSession.CurrentSession
                                        </span>
                                    </td>
                                    <td style="text-align:right;border-left:0 !important;" width="25%">
                                        Print Date/Time : @DateTime.Now.ToString("dd/MM/yyyy hh:mmtt") &nbsp;
                                    </td>
                                </tr>
                            </thead>
                            <tr>
                                <td> School Code</td>
                                <td  colspan="2"> @Model.Schl</td>

                                <td> School Complete Name </td>
                                <td colspan="2"> @LoginSession.SCHLNME</td>
                            </tr>
                            <tr>
                                <td> Magazine Fixed </td>
                                <td  colspan="2"> @Model.FixedMagazine</td>

                                <td> Magazine Extra</td>
                                <td colspan="2"> @Model.ExtraMagazine</td>
                            </tr>
                            <tr><td colspan="4">Online Paid Fee Details</td></tr>
                            <tr>
                                <td>Trans Id</td>
                                <td>@Model.ChallanId</td>

                                <td>Deposit Date</td>
                                <td>@Model.ChallanDT</td>

                                <td>Amount</td>
                                <td>@Model.TotalAmount</td>
                            </tr>
                            <tr><td colspan="4">Manual Paid Fee Details</td></tr>
                            <tr>
                                <td>Receipt No</td>
                                <td>@Model.OldReceiptNo</td>

                                <td>Receipt Date</td>
                                <td>@Model.OldDepositDate</td>

                                <td>Receipt Amount</td>
                                <td>@Model.OldAmount</td>
                            </tr>
                        </table>
                </div>
            </div>

            }
        }
        </div>


