@{
    ViewBag.Title = "SchoolToSchoolMigrationSummary";
    Layout = "~/Views/Shared/_Card_Header.cshtml";
}
<link rel="stylesheet" href="https://registration2022.pseb.ac.in/Content/cardprintr.css" />
<h1 class="noprint">School To School Migration Summary</h1>
<div class="row">
    <div class="clearfix"></div>
    <div class="col-md-12 text-right noprint">
        <input type="button" value="Print" class="btn" onclick="window.print()" />
        <input type="button" value="Back" class="btn" onclick="history.go(-1);" />
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
        <div style="border:1px solid #fff !important;display:block;margin-bottom:30px">
            <table border="1" width="100%" class="tprint">
                <thead>
                    <tr>
                        <td style="border-right:0 !important" colspan="2" width="15%"><div style="padding:2px"><img src="~/Images/Printlogo.jpg" width="60px" height="60px" alt="PSEB" /></div></td>
                        <td colspan="4" style="font-size:16px;text-align:center;line-height:24px;vertical-align:top;border-left:0 !important;border-right:0 !important;padding-top:8px">
                            <span style="font-size:28px">Punjab School Education Board</span><br /><span>School to School Migration Summary, (Session @Session["session"].ToString())</span>
                        </td>
                        <td style="text-align:right;border-left:0 !important;" width="15%">Print Date : @DateTime.Now.ToString("dd/MM/yyyy") &nbsp;</td>
                    </tr>
                    <tr>

                        <td width="20%" colspan="2">&nbsp;Total Applied</td>
                        <td width="15%">&nbsp;Pending SCHL Approval </td>
                        <td width="15%">&nbsp;Pending HOD Approval</td>
                        <td width="15%">&nbsp;Fee Pending Approved</td>
                        <td width="15%">&nbsp;Approved</td>
                        <td width="20%">&nbsp;Total Fee Received</td>
                    </tr>
                </thead>
                @{
                    if (ViewBag.TotalCount > 0)
                    {
                        int Count = 0;
                        for (int i = 0; i < Model.StoreAllData.Tables[0].Rows.Count; i++)
                        {
                            Count = Count + 1;
                            var Total = Model.StoreAllData.Tables[0].Rows[i]["Total"].ToString();
                            var PendingTotal = Model.StoreAllData.Tables[0].Rows[i]["PendingTotal"].ToString();
                            var PendingSCHL = Model.StoreAllData.Tables[0].Rows[i]["PendingSCHL"].ToString();
                            var PendingHOD = Model.StoreAllData.Tables[0].Rows[i]["PendingHOD"].ToString();
                            var NOS_FeePending = Model.StoreAllData.Tables[0].Rows[i]["NOS_FeePending"].ToString();

                            var NOS_FeePaid = Model.StoreAllData.Tables[0].Rows[i]["NOS_FeePaid"].ToString();
                            var TotalFeePaid = Model.StoreAllData.Tables[0].Rows[i]["TotalFeePaid"].ToString();
                                <tr>
                                    <td colspan="2">&nbsp;@Total</td>
                                    <td>&nbsp;@PendingSCHL</td>
                                    <td>&nbsp;@PendingHOD</td>
                                    <td>&nbsp;@NOS_FeePending</td>
                                    <td>&nbsp;@NOS_FeePaid</td>
                                    <td>&nbsp;@TotalFeePaid</td>
                                </tr>
                        }
                    }
                }
               
            </table>
        </div>
    </div>
</div>
