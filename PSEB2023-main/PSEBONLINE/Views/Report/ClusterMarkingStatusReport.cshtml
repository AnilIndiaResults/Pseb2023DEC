                                                    var NOSP = dr["NOSP"].ToString().Trim().ToUpper();
                                                    var FNOS = dr["FNOS"].ToString().Trim().ToUpper();
                                                    var NOC = dr["NOC"].ToString().Trim().ToUpper();
