@model PSEBONLINE.Models.CompartmentCandidatesModel
@{
    Layout = "~/Views/Shared/_Login_Header.cshtml";
}
<style type="text/css">
    .img_hover:hover .divimg {display:block
    }
    .divimg {display:none
    }
</style>


<h1>@*Senior Secondary*@ Examination Form For Compartment (Regular) , JUNE-2017</h1>
@using (Html.BeginForm("CompCandidateExamForm", "CompartmentCandidates", FormMethod.Post, new { id = "refno", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="">Important Links</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <ul style="padding-bottom:0;height:318px">
                                <li>&#10093; <a href="/PDF/Press_Note_Matriculation_June2017.pdf" target="_blank" title="Press Note Regarding Fee Schedule Matriculation Examination Re-Appear (Regular) June-2017">Press Note Regarding Fee Schedule Matriculation Examination Re-Appear (Regular) June-2017</a></li>
 <li>&#10093; <a href="/PDF/Matriculation_Prospectus_June2017.pdf" target="_blank" title="Press Note Regarding Fee Schedule Matriculation Examination Re-Appear (Regular) June-2017">Matriculation Examination Prospectus Re-Appear (Regular) June-2017 </a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-4">
            <div class="" style="border:2px solid #ccc;padding:10px 50px;background-color:#f1f1f1;margin-bottom:10px">
                <form name="myForm" method="post">

                    <h3 class="form-signin-heading text-center">
                        <input type="button" value="New User (Click Here to Register)" onclick="javascript:document.location.href='@Url.Action("CompCandidateIntroForm", "CompartmentCandidates")    '" />
                    </h3>

                    <h3 class="form-signin-heading text-center">Login (Already Registered)</h3>
                    <div class="text-danger"> @ViewBag.Message </div>
                    @Html.TextBoxFor(a => a.refNo, new { id = "refNo", @maxlength = "20", @class = "form-control", placeholder = "Enter Reference Number", onkeypress = "return isNumberKey(event);" })
                    <br />
                    @Html.TextBoxFor(a => a.OROLL, new { id = "OROLL", @maxlength = "20", @class = "form-control", placeholder = "Enter Old Roll Number", onkeypress = "return isNumberKey(event);" })
                    <p style="color:#cc0000"> (Ref. No. & Old Roll No. has been send to your Email Id & Mobile No. at time of Registration)</p>
                    <div style="text-align:center">
                        <input type="submit" value="Submit" onclick="return valForm();" /><br /><br />
                        <span style="color:#cc0000">@Html.ActionLink("Forgot Password ?", "ForgotPassword", "CompartmentCandidates")</span>
                    </div>


                </form>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="">Notice Board</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <ul style="padding-bottom:0;height:318px">
                                    <img src="/images/Notice_IMG.jpg" class="img_hover" alt="Notice" style="width:100%" />
                                <div style="color:#000">This form is only for that candidates which are appeared  as Regular first time in Exam March 2017. Examination form for Open school candidates/Re-Appear candidates will be activated later.</div>
                            </ul>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        <div class="clearfix"></div>
        <div class="col-md-12"><div style="border-top:1px dashed #ccc;padding-top:10px"></div></div>
        <div class="clearfix"></div>
        <div class="col-md-2">
            Toll Free Help Line No.<br />
            For Technical Support
        </div>
        <div class="col-md-3">
            <span style="font-size:26px">
                18004199810<br /><span style="font-size:12px"> Mon to Fri – 10:00 AM to 5:00 PM</span><br />
                <span style="font-size:12px"><i class="fa fa-envelope"></i> <a href="mailto:Contact1@psebonline.in" target="_blank" class="redc">contact1@psebonline.in</a></span>
            </span>
        </div>
        <div class="col-md-3"><span style="font-size:26px">18004190690<br /><span style="font-size:11px">Mon to Fri – 10:00 AM to 5:00 PM</span><br /><span style="font-size:12px"><i class="fa fa-envelope"></i> <a href="mailto:Contact2@psebonline.in" target="_blank" class="redc">contact2@psebonline.in</a></span></span></div>

        <div class="col-md-4"></div>
        <div class="clearfix"></div>
        <div class="col-md-12"><div style="padding-top:10px"></div></div>
        </div>
                }


                

                @{

                    if (ViewData["Status"] != null)
                    {
                        var result = ViewData["Status"].ToString();

                        if (result == "1")
                        {
                            <script type="text/javascript" language="javascript">
                                // alert("Refrence No. Successfully Generated. Kindly Check your Email and Mobile No.: ");
                                document.location.href = '@Url.Action("CompCandidateConfirmation/"+ ViewData["refno"], "CompartmentCandidates")';
                            </script>
                        }

                        if (result == "2")
                        {

                            <script type="text/javascript" language="javascript">

                                //alert("Refrence No. Already Generated. Kindly Check your Email and Mobile No. : ");
                                document.location.href = '@Url.Action("CompCandidateConfirmation/"+ ViewData["roll"], "CompartmentCandidates")';
                            </script>
                        }
                        if (result == "0")
                        {

                            <script type="text/javascript" language="javascript">

                                alert("Refrence No. Not Generated. Retry Again ");
                                document.location.href = '@Url.Action("CompCandidateExamForm", "CompartmentCandidates")';
                            </script>
                        }
                    }

                }
                <script type="text/javascript">
                    function valForm() {

                        var txtrefNo = document.getElementById("refNo").value;
                        if (txtrefNo.value == "") {
                            alert("Enter Reference Number");
                            txtrefNo.focus();
                            return false;
                        }
                        if (txtrefNo.length != 13) {
                            alert("Enter Valid Reference Number.");
                            document.getElementById("refNo").focus();
                            return false;
                        }
                        var txtOROLL = document.getElementById("OROLL");
                        if (txtOROLL.value == "") {
                            alert("Enter Old OROLL No.");
                            txtOROLL.focus();
                            return false;
                        }
                    }

                    function isNumberKey(evt) {
                        var charCode = (evt.which) ? evt.which : event.keyCode
                        if ((charCode >= 48 && charCode <= 57) || (charCode == 8) || (charCode == 46)) {
                            return true;
                        }
                        else {
                            alert("Invalid character...Enter Only Number!!");
                            return false;
                        }
                    }
                </script>
