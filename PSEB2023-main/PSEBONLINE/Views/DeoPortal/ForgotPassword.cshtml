@model PSEBONLINE.Models.DEOModel
@{
    ViewBag.Title = "ForgotPassword";
    //Layout = "~/Views/Shared/_Headerui.cshtml";
    Layout = "~/Views/Shared/_Login_Header.cshtml";
}


<form class="form-signin" name="Login_Form" method="post" action="">
    <h3 class="form-signin-heading text-center">Forgot Password</h3>
    Enter User Name<br />
    @Html.TextBoxFor(m => m.username, new { id = "username", required = "required", @maxlength = "7", @class = "form-control", style = "text-transform: none;", onkeypress = "return isNumberKey(event);" })
    <br />
    <input type="submit" value="@ViewBag.SubmitValue" onclick='@Url.Action("ForgotPassword", "DeoPortal", new { id="txtsend"})'><br />

    @{
        if (ViewData["result"] != null)
        {
            @ViewBag.Message
            if (ViewData["result"].ToString() == "1")
            {
                <p style="color:red;">Kindly check Spam Email Too. Add noreply@psebonline.in to your white list/safe sender list. Else, your mailbox filter or ISP (Internet Service Provider) may stop you from receiving e-mails.</p>
            }
        }
    }

</form>

