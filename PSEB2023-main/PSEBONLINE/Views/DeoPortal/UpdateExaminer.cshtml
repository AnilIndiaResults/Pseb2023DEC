<h1>Update Examiner</h1>
@using (Html.BeginForm("UpdateExaminer", "DeoPortal", FormMethod.Post, new { id = "searchform" }))
{
    <div class="row">
        @Html.Hidden("hdnccode", (string)ViewBag.Exid)
        <div class="col-md-2">Class</div>
        <div class="col-md-4">
