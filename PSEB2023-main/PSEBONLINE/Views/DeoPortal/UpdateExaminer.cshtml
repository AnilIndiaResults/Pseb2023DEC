        <div class="col-md-4">@Html.ListBoxFor(m => m.lstSubjects, new SelectList(ViewBag.lstsubs, "Value", "Text"), new { width = "200Px" })</div>
        @*<div class="col-md-4">@Html.ListBoxFor(m => m.lstSubjects, new MultiSelectList(ViewBag.lstsubs, "Value", "Text"), new { width = "200Px" })</div>*@
        @*<div>@Html.ListBoxFor(m => m.lstSubjects, new MultiSelectList((List<SelectListItem>)ViewData["lstsubs"]), new { width = "200Px" })</div>*@
