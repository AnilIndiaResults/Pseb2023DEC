                ClassList.Add(new SelectListItem { Text = "Matric", Value = "10" });
                ClassList.Add(new SelectListItem { Text = "Senior Secondary", Value = "12" });
            }
            @Html.DropDownList("Class", ClassList, new { id = "Class" })
        </div>
        <div class="col-md-2">Subject</div>
