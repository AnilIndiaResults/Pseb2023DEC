            $("#SearchString").datepicker("enable");
            $("#SearchString").off('keypress');
            $("#SearchString").keypress(function (evt) {
                return false;

            });

            $("#SearchString").datepicker({
               // dateFormat: "dd/mm/yy",
               // changeMonth: true,
