                                </td>
                                <td>
                                    @if (std_Photo != "" && std_Sign != "")
                                    {<span></span>}
                                    else
                                    {<input type="checkbox" id="@stdid" class="checkbox" name="AllChkId" value="@form_Name" />}


                                </td>

                            </tr>
                            if (d == ViewBag.TotalCount)
                            {
                                <tr>
                                    <td colspan="8">

                                        Page @ViewBag.pagesize of @ViewBag.pn

