@model PSEBONLINE.Models.Printlist
@{
    ViewBag.Title = "View Subject Wise Count Of Students";
    //Layout = "~/Views/Shared/_Header.cshtml";
    Layout = "~/Views/Shared/_Card_Header.cshtml";
}
<div class="col-md-12 text-right noprint">
    <input type="button" value="Print" class="btn" onclick="window.print()" />
    <input type="button" value="Back" class="btn" onclick="history.go(-1);" />
</div>
<div class="clearfix"></div>
<div class="container">
    <div class="row" id="divMain1">               
        <div class="col-md-12">
            @{
                if (ViewBag.TotalCount > 0)
                {                   
                    <div style="border:1px solid #fff !important;display:block;margin-bottom:30px">
                        <table border="1" width="100%" class="tprint">
                            <tr>
                                <td style="border-right:0 !important"><div style="padding:2px"><img src="~/Images/Printlogo.jpg" width="60px" height="60px" alt="PSEB" /></div></td>
                                <td style="font-size:14px;text-align:center;line-height:20px;vertical-align:top;border-left:0 !important;border-right:0 !important;padding-top:8px">
                                    <span style="font-size:28px">Punjab School Education Board</span>
                                    <br /><span style="font-size:16px">@Model.StoreAllData.Tables[1].Rows[0]["clsNM"].ToString() Examination (@Model.StoreAllData.Tables[1].Rows[0]["RP"].ToString()) March-2020</span>
                                    <br /> <span style="font-size:16px">Subject-Wise Count of Students (Centre Statement)</span>
                                </td>
                                <td style="text-align:right;border-left:0 !important;">Print Date : @DateTime.Now.ToString("dd/MM/yyyy") &nbsp;</td>
                            </tr>                         
                            <tr>
                                <td colspan="3">
                                    &nbsp;School Code/Name : @Model.StoreAllData.Tables[1].Rows[0]["SCHL"].ToString()/@Model.StoreAllData.Tables[1].Rows[0]["SCHLNME"].ToString()<br /><br />
                                    &nbsp;Boys : @Model.StoreAllData.Tables[3].Rows[0]["Male"].ToString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Girls : @Model.StoreAllData.Tables[3].Rows[0]["FeMale"].ToString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Total : @Model.StoreAllData.Tables[3].Rows[0]["totalstudent"].ToString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Set : @Model.StoreAllData.Tables[1].Rows[0]["SET"].ToString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Lot : @Model.StoreAllData.Tables[2].Rows[0]["Lot"].ToString()
                                </td>
                            </tr>
                            <tr>
                                <th width="12%">Sub Code</th>
                                <th width="76%">Subject Name</th>
                                <th width="12%">Total</th>
                            </tr>

                           
                            @for (int i = 0; i < Model.StoreAllData.Tables[4].Rows.Count; i++)
                            {
                            var SUB = Model.StoreAllData.Tables[4].Rows[i]["SUB"].ToString();
                            var SUBNM = Model.StoreAllData.Tables[4].Rows[i]["SUBNM"].ToString();
                            var TotalMedium = Model.StoreAllData.Tables[4].Rows[i]["TotalMedium"].ToString();                           
                            <tr>
                                <td>@SUB</td>
                                <td>@SUBNM</td>
                                <td>@TotalMedium</td>
                            </tr>
                            }
                        </table>

                        <table width="100%" cellpadding="0" cellspacing="0" style="margin-top:250px">
                            <tr>
                                <td width="35%">
                                    <div style="border:2px solid #000;line-height:28px;padding:10px">
                                        For Office Use Only<br />
                                        Centre Code ............................................................<br />
                                        Centre Name ..........................................................<br /><br />
                                        Verified By ..............................................
                                    </div>
                                    </td>  
                                <td width="30%"></td>
                                <td width="35%">
                                    <div style="border:2px solid #000;line-height:28px;padding:10px">
                                        Signature of Two Senior Teachers of School<br />
                                        1. ................................................................<br />
                                        2. ................................................................<br /><br />
                                        Signature of School Head (With Stamp)
                                        </div>
                                </td>
                            </tr>                           
                        </table>
                    </div>
                    }
                }
    </div>
    </div>
</div>





