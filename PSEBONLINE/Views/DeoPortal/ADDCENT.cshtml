@{
    Layout = "~/Views/Shared/_Headerdeo.cshtml";
}
<h1>Add Center</h1>
<p style="display:none;">
    Welcome: @if (Session["NAME"] != null)
    {@Session["NAME"].ToString()}
    else { Response.Redirect("~/DeoPortal/Index"); }
</p>
