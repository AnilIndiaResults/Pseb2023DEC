@model PSEBONLINE.Models.PunAddModels
@{
    Layout = "~/Views/Shared/_Login_Header.cshtml";
}
<h1>Punjabi Additional</h1>
<div class="row">
    <div class="col-md-6">
        <fieldset>
            <legend>Upload Punjabi Additional Error File</legend>
            @using (Html.BeginForm("AdminPunAddUpload", "Admin", FormMethod.Post, new { id = "uploadform", enctype = "multipart/form-data" }))
            {
                @Html.Hidden("Filevalue", "ROLL")
                <div class="row" style="padding-bottom:100px">
                    <div class="col-md-10">
                        Upload Punjabi Additional Error File @Html.TextBoxFor(m => m.file, new { id = "ROLLMIS", type = "file", required = "required" })
                    </div>
                    <div class="col-md-2">
                        <br />
                        <input type="submit" value="Upload" onclick="return valForm();" />
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12">
                        <br />
                        <a download="" href="~/PDF/PunAddErrorSample.xls" class="btn">Click Here to Download Sample File</a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12">
                        <h1>Important Instructions:</h1>
                        <p style="padding-left:15px">
                            1) All Fields are compulsory.<br />
                            2) REFNO Must be of 11 Digits.<br />
                            3) ERR Code Must be of 4 Digits.<br />
                        </p>
                    </div>

                </div>
            }
</fieldset>
</div>
