    $(function () {
        $("#dPending").dialog({
            modal: true,
            title: "Alert",
            width: 400,
            height: 250,
            buttons: {
                "OK": function () {
                    $(this).dialog("close");
                },
            }
        });
    });
</script>
@{
    if (ViewData["result"] != null)
    {
        if (ViewData["result"].ToString() == "0")
        {
            <div id="dPending" style="font-size:24px;display: none;padding:30px 10px" align="center" class="kdsfont">
                <span class="rqf">Wrong Credentials..Plz try again with valid Credentials</span>
            </div>
        }
        else if (ViewData["result"].ToString() == "5")
        {
            <div id="dPending" style="font-size:24px;display: none;padding:30px 10px" align="center" class="kdsfont">
                <span class="rqf">You are not allowed for self declaration, please contact pseb board</span>
            </div>
        }
        else if (ViewData["result"].ToString().Contains("Error"))
        {
            <div id="dPending" style="font-size:24px;display: none;padding:30px 10px" align="center" class="kdsfont">
                <span class="rqf">@ViewData["result"]</span>
            </div>
        }
    }
}


<script type="text/javascript">

    $(document).ready(function () {

        $('#REGNO').attr('placeholder', 'Enter Registration Number');
        $('#h3t').hide();
        $('#h1t').show();
        $('#dvmsgA').hide();
        $('#dvmsgR').show();
    });
    $("#RP").change(function () {

        var selectedRP = $("#RP").val();
        if (selectedRP == "A") {
            $('#REGNO').attr('placeholder', 'Enter Reference Number');
            $('#h1t').hide();
            $('#h3t').hide();
            $('#dvmsgR').hide();
            $('#dvmsgA').hide();
        }
        else {
            $('#REGNO').attr('placeholder', 'Enter Registration Number');
            $('#h3t').hide();
            $('#h1t').show();
            $('#dvmsgA').hide();
            $('#dvmsgR').show();
        }

    });
</script>


