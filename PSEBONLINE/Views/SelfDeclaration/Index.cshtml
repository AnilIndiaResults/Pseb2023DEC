    @Html.TextBoxFor(model => model.REGNO, new { @class = "form-control", placeholder = "Enter Registration Number", maxlength = "25", required = "required", style = "text-transform: none;" })


    <p style="text-align:center"><input type="submit" value="Login" />&nbsp;&nbsp;&nbsp;</p>
</form>


