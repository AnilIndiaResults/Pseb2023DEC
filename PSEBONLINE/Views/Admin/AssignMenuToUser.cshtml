                ////    var arrid = "";
                ////    var arrcast = "";
                ////    var j = 0;
                ////    if (this.checked) {
                ////        pageid += id + ",";
                ////    }
                ////});

                pageid = $("#Menu").val();
                if (storeid == "") {
                    alert("Please Select Atleast 1 User .");
                }
                else if (pageid == "") {
                    alert("Please Select Menu .");
                    $("#Menu").focus();
                }
                else if (storeid != "" && pageid != "") {

