                        arrid += arr[i];
                    }
                    j++;
                }
                //alert(dtype);
                for (var k = 3 + j + 5; k < arr.length; k++) {
                    arrcast += arr[k];
                }

            });
        });
        // End select all



        //Start Save Data
        $("#btnsave").click(function () {
            // alert("Start Save Data");

            var isvalid = true;
            //  alert(isvalid);
            if (isvalid == true) {
                var chkdee = "";
                var storeid = "";
                var pageid = "";
                var storeid1 = "";
                var storechkid = "";
                var storescid = "";
                $('.checkboxD').each(function () {
                    var id = this.id;
                    // alert("dist= "+ id);
                    var arr = [];
                    arr = id;
                    var arrid = "";
                    var arrcast = "";
                    var j = 0;
                    if (this.checked) {
                        storeid += id + ",";
                    }
                });

                ////$('.checkboxP').each(function () {
                ////    var id = this.id;
                ////    // alert("Page= " + id);
                ////    var arr = [];
