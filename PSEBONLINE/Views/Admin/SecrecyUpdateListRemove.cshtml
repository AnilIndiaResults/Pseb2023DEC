<script type="text/javascript">
    function dee() {
        
        if ($("#SelList").val() == "") {

            $("#reqsellist").slideDown("slow");
            return false;
        }

        if ($("#SelectItem").val() != "" && $("#SearchString").val() == "" && $("#SelList").val()!=4) {
            $("#reqsellist").slideUp("slow");
            $("#reqsstring").slideDown("slow");
            return false;
        }
        else
            return true;

    }
   
</script>
<script>
    function deetext() {
        $("#reqsstring").slideUp("slow");
    }
    function deechange() {
        if ($("#SelList").val() != "") {
            $("#reqsellist").slideUp("slow");
        }
        else {
            $("#reqsellist").slideDown("slow");
        }
    }


</script>


