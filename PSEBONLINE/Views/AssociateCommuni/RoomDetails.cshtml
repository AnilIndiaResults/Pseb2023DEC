        var width = parseFloat(document.getElementById("width").value);
        var quantity = parseInt(document.getElementById("quantity").value);
        var totalArea = (height * width) * quantity;
        document.getElementById('area').value = totalArea.toFixed(2); // Assuming 2 decimal places

        // Display or use the totalArea as needed

    }
</script>


@{ if (ViewData["result"] != null)
    {
        if (ViewData["result"].ToString() != "")
        {
            if (ViewData["result"].ToString() == "1")
            {
                <script type="text/javascript" language="javascript">
                    alert("Submit SuccessFully..");
                    window.location.href = '@Url.Action("RoomDetails", "AssociateCommuni", new { id = Model.RoomDetailsModel.SCHL })';
                </script>
            }
            else if (ViewData["result"].ToString() == "DUP")
            {
                <script type="text/javascript" language="javascript">alert("Already Exist");</script>
            }
            else
            {
                <script type="text/javascript" language="javascript">
                    alert("Submit Failure, Please Try Again");
                                            //alert('ViewBag.Mesaage');</script>
            }

        }
    } }










