@model PSEBONLINE.Models.AdminModels
@{
    ViewBag.Title = "UpdateRecheckBarData";
    Layout = "~/Views/Shared/_Header.cshtml";
}

<h1>Update Recheck Bar Data</h1>
<div class="row" id="divR">
    <div class="col-md-12">
        <fieldset>
            <legend>Update Recheck Bar Data MIS File</legend>
            @using (Html.BeginForm("UpdateRecheckBarData", "Recheck", FormMethod.Post, new { id = "uploadform", enctype = "multipart/form-data" }))
            {
                @Html.Hidden("Filevalue", "REG")
                <div class="row" style="padding-bottom:100px">
                    <div class="col-md-4">
                        Upload MIS File @Html.TextBoxFor(m => m.file, new { id = "MIS_FILE", type = "file", required = "required" })
                    </div>
                    <div class="col-md-2">
                        <br />
                        <input type="submit" value="Upload" onclick="return valForm();" />
                    </div>
                    <div class="col-md-6 text-right">
                        <br />                       
                        <a download="" href="~/PDF/UpdateRecheckBarDataSAmple.xls" class="btn">Click Here to Download Sample File</a> <input type="button" value="Back" onclick="javascript:document.location.href='@Url.Action("Welcome", "Admin", new { File = "Back" })    '" />
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12">
                        <h1>Important Instructions:</h1>
                        <p style="padding-left:15px">
                            1) All Fields are compulsory.<br />
                            2) ROLL, SUB, BAR, LEVEL all columns are must<br />                         
                        </p>
                    </div>
                </div>
            }
        </fieldset>
    </div>
</div>


@{
    if (ViewData["Result"] != null)
    {
        if (ViewData["Result"].ToString() == "1")
        {
            <script type="text/javascript" language="javascript">
                            alert("File Uploaded Successfully");                            
            </script>}
        else
        {
            <script type="text/javascript" language="javascript">
                            alert('@ViewBag.Message');
            </script>}

    }
}



<script type="text/javascript">

                $(document).ready(function () {
                    $('input[type=file]').change(function () {
                        var val = $(this).val().toLowerCase();
                        var regex = new RegExp("(.*?)\.(xlsx|xls)$");
                        if (!(regex.test(val))) {
                            $(this).val('');
                            alert('Please select only .xls file format');
                        }
                    });
                });

</script>





