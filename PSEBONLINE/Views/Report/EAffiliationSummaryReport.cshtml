    <div class="clearfix"></div>
    <div class="col-md-12 text-right noprint">
        <input type="button" value="Print" class="btn" onclick="window.print()" />
        <input type="button" value="Back" class="btn" onclick="history.go(-1);" />
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
        <div style="border:1px solid #fff !important;display:block;margin-bottom:30px">
            <table border="1" width="100%" class="tprint">
                <thead>
                    <tr>
                        <td style="border-right:0 !important" colspan="2" width="15%"><div style="padding:2px"><img src="~/Images/Printlogo.jpg" width="60px" height="60px" alt="PSEB" /></div></td>
                        <td colspan="3" style="font-size:16px;text-align:center;line-height:24px;vertical-align:top;border-left:0 !important;border-right:0 !important;padding-top:8px">
                            <span style="font-size:28px">Punjab School Education Board</span><br /><span>EAffiliation Summary Report (Session @Session["session"].ToString())</span>
                        </td>
                        <td style="text-align:right;border-left:0 !important;" width="15%">Print Date : @DateTime.Now.ToString("dd/MM/yyyy") &nbsp;</td>
                    </tr>
                    <tr>                        
                        <td width="20%" colspan="2">&nbsp;Class</td>
                        <td width="20%">&nbsp;Total Application Registered </td>
                        <td width="25%">&nbsp;Total Application Final Submitted</td>
                        <td width="20%">&nbsp;Total Application Completed</td>
                        <td width="15%">&nbsp;Total Fees Collected</td>
                    </tr>
                </thead>
                @{
                    if (ViewBag.TotalCount > 0)
                    {
                        int Count = 0;
                        for (int i = 0; i < Model.StoreAllData.Tables[0].Rows.Count; i++)
                        {
                            Count = Count + 1;
                            var cls = Model.StoreAllData.Tables[0].Rows[i]["CLASS"].ToString();
                            var TotalApplication = Model.StoreAllData.Tables[0].Rows[i]["TotalApplication"].ToString();
                            var TotalLock = Model.StoreAllData.Tables[0].Rows[i]["TotalLock"].ToString();
                            var TotalVerified = Model.StoreAllData.Tables[0].Rows[i]["TotalVerified"].ToString();
                            var TotalFees = Model.StoreAllData.Tables[0].Rows[i]["TotalFees"].ToString();
                            <tr>                                
                                <td colspan="2">&nbsp;@cls</td>
                                <td>&nbsp;@TotalApplication</td>
                                <td>&nbsp;@TotalLock</td>
                                <td>&nbsp;@TotalVerified</td>
                                <td>&nbsp;@TotalFees</td>
                            </tr>
                        }
                    }
                }
                @*<tr>                    
                    <td style="font-size:16px">&nbsp;@ViewBag.Total</td>
                </tr>*@
            </table>
        </div>
    </div>
</div>
